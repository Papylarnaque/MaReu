<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_reunion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="0dp"

    android:paddingEnd="0dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView_add_reunion">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView_add_reunion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/subject_add_reunion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_double"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_double"
                android:autofillHints=""
                android:hint="@string/add_reunion_edit_subject"
                android:inputType="text"
                android:maxLength="30"
                android:textSize="@dimen/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/add_reunion_edit_subject" />

            <TextView
                android:id="@+id/select_start_date_add_reunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_double"
                android:calendarViewShown="false"
                android:drawableEnd="@drawable/mr_cast_checkbox"
                android:text="@string/date_add_reunion_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subject_add_reunion" />

            <TextView
                android:id="@+id/select_start_time_add_reunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_double"
                android:calendarViewShown="false"
                android:drawableEnd="@drawable/mr_cast_checkbox"
                android:text="@string/time_add_reunion_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_start_date_add_reunion" />

            <TextView
                android:id="@+id/duration_add_reunion_text"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="@string/duration_add_reunion_text"
                android:layout_marginTop="@dimen/margin_double"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_start_time_add_reunion" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintGuide_percent="0.5"/>

<!-- TODO Label pour NumberPicker -->

            <NumberPicker
                android:id="@+id/duration_hours_add_reunion"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/picker"
                android:inputType="datetime"
                android:timePickerMode="spinner"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/duration_add_reunion_text" />

            <NumberPicker
                android:id="@+id/duration_minutes_add_reunion"
                android:layout_width="0dp"
                android:layout_height="@dimen/picker"
                android:layout_marginEnd="@dimen/large_margin"
                android:inputType="datetime"
                android:timePickerMode="spinner"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/duration_add_reunion_text" />

            <!--
                <TextView
                    android:id="@+id/room_add_reunion_text"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/room_add_reunion_text"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_minutes_add_reunion" />
    -->

            <Spinner
                android:id="@+id/room_add_reunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_double"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration_minutes_add_reunion"
                tools:text="@string/room_add_reunion_text" />

            <MultiAutoCompleteTextView
                android:id="@+id/guest_add_reunion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_double"
                android:layout_marginTop="@dimen/margin_double"
                android:layout_marginEnd="@dimen/margin_double"
                android:hint="@string/guest_list_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_add_reunion"
                tools:text="@string/guest_list_text_view" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>